concurrency: {{ config_concurrency }}
iterations: {{ config_iterations }}
delay: 4
timelimit: 3000
continue_on_errors: true

connections:
  operation_timeout_ms: 3000
  connection_timeout_ms: 40000

  {%- for k in range(num_connections) %}
  connection:
    sessions: 1
    host: "localhost:{{ keeper_ports[k] }}"
  {% endfor %}

generator:
  # start of setup
  setup:
    node:
      name: "test"
  # end of setup
  requests:
    multi:
      size: 10
      create:
        weight: 1
        path: "/test"
        name_length: 50
output:
  stdout: true